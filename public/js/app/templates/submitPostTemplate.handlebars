{{#if controller.session.signedIn}}
  <div class="create-post">
    <div class="send-to">
        sendTo
    </div>

    <div>
        {{textarea value=body class="editarea"}}
    </div>

    <div class="row">
      <div class="col-md-6">
        <div class="pull-left">
          Add file
        </div>
      </div>
      <div class="col-md-6">
        <div class="pull-right">
          <button {{action 'create'}} class="btn btn-default btn-xs">Post</button>
        </div>
      </div>
    </div>

  </div>
{{/if}}
