{{#if controller.session.signedIn}}
  <div class="clearfix submitForm">
    <div>
      {{textarea}}
    </div>
    <div class="pull-left">
      Add:
    </div>
    <div class="pull-right">
      <button>Post</button>
    </div>
  </div>
{{/if}}

<div class="posts">
  <ul class="media-list">
    {{#each post in model.posts}}
      {{view "timeline-post" content=post}}
    {{/each}}
  </ul>
</div>
