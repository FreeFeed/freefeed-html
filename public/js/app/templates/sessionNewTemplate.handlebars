<div class="col-md-3">
  <h2>Sign in</h2>

  {{#if errors}}
    <div class="alert alert-danger" role="alert">
      <span id="error-message">{{errors}}</span>
    </div>
  {{/if}}

  <form action="/session" method="post">
    <div class="form-group">
      <label for="username">Username</label>
      {{input value=username type="text" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      {{input value=password type="password" class="form-control"}}
    </div>

    <div class="form-group">
      <button {{action "signin"}} class="btn btn-primary">Sign In</button>
    </div>
  </form>

  {{#if errors}}
    {{#link-to "forgot-password"}}Forgot your password?{{/link-to}}
  {{/if}}
</div>
