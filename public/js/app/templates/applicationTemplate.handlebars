<div class="container">
  <div class="row">
    <div class="col-md-4">
        <div class="header">
      <h1 class="title">
       {{#link-to 'timeline.home'}}Pepyatka{{/link-to}} <small class="mutted">0.1.0</small>
      </h1>
        </div>
    </div>

    <div class="col-xs-5 search-field">
      <div class="form-inline">
        <input class="form-control input-sm search-input" />
        <button class="btn btn-default btn-sm">Search</button>
      </div>
    </div>

    {{#unless controller.session.signedIn}}
      <div class="col-xs-3 signin-toolbar">
        {{#link-to 'session.new'}}Sign In{{/link-to}}
        or
        {{#link-to 'users.new'}}Sign Up{{/link-to}}
      </div>
    {{/unless}}
  </div>

  <div class="row">
    <div class="col-md-9">
      <div class="content">
        <div class="box">
          <div class="box-header-timeline">
            Home
          </div>
          <div class="box-body">
            {{outlet}}
          </div>
          <div class="box-footer">

          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3 sidebar">
      {{#if controller.session.signedIn}}
        <div class="logged">
          <div class="logged-avatar">
            <img class="media-object" src="/img/48x48.png">
          </div>

          <div class="logged-user">
            <div class="author">
              {{#link-to 'timeline.index' controller.session.currentUser.username}}{{controller.session.currentUser.screenName}}{{/link-to}}
            </div>
            <div>
              {{#link-to 'settings'}}settings{{/link-to}}
              -
              {{#link-to 'session.destroy'}}log out{{/link-to}}
            </div>
          </div>
        </div>
      {{/if}}

      <div class="box">
        <div class="box-header-friends">
          Friends
        </div>
        <div class="box-body">
          <ul>
            <li><a href="#">Home</a></li>
            <li><a href="#">Direct messages</a></li>
            <li><a href="#">My discussions</a></li>
            <li><a href="#">Best of day</a></li>
          </ul>
        </div>
        <div class="box-footer">
          <a href="#">Browse/edit friends</a>
        </div>
      </div>

      <div class="box">
        <div class="box-header-groups">
          Groups
        </div>
        <div class="box-body">
        </div>
        <div class="box-footer">
          {{#link-to 'groups'}}Browse/edit groups{{/link-to}}
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <footer>Footer</footer>
    </div>
  </div>
</div>
