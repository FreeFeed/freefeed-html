{{post.content.body}}<br/>
{{#link-to 'post' controller.session.currentUser.username post.content.id}}{{post.content.createdAt}}{{/link-to}}

{{textarea value=controller.body}}
<button {{action 'update'}}>Post</button>
<a {{action 'destroy'}}>Destroy</a>

<br/>
Comments:
<br/>
<ul>
  {{#each comment in post.comments itemController="post-comment"}}
    {{view "post-comment" content=comment}}
  {{/each}}
</ul>


<br/>
Likes:
<br/>
<ul>
{{#each user in post.content.likes}}
  {{user.screenName}}<br/>
{{/each}}
</ul>


<br/>

{{textarea value=post.newComment}}
<button {{action 'create'}}>Post</button>
<a {{action 'like'}}>Like</a>
<a {{action 'unlike'}}>Un-like</a>

